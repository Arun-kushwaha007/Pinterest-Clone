<% include ./partials/header.ejs %>

    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      <input type="file" name="image" />
    </form>

    <!-- <div class="containerpers bg-zinc-800"> -->

    <div
      class="profile  w-full min-h-screen flex item-center justify-center bg-zinc-800 text-white pt-0"
    >
      <div class="profdetc flex flex-col mt-5 bg-zinc-800 item-center">
        <div class="relative">
          <span
            id="uploadicon"
            class="w-8 h-8 absolute bottom-0 right-0 rounded-full item-center justify-center bg-zinc-200"
          >
            <i class="text-zinc-800 ri-pencil-fill flex item-center justify-center mt-1"></i>
          </span>
          <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
            <img
              src="/images/uploads/<%= user.profileImage %>"
              alt="Profile Picture"
            />
          </div>
        </div>

        <h2 class="name text-white text-4xl mt-2"><%= user.fullname %></h2>
        <h3 class="username text-white mt-2">@<%= user.username %></h3>
        <p class="tagline"></p>
        <p class="description"></p>
        <div class="flex ">

        
        <a href="/edit" class=" px-3 py-2 rounded-full bg-red-700 text-white text-s font-semibold mt-3 mr-2 hover:bg-red-800">Edit Profile </a>
        <a href="/add"
          class="px-3 py-2 rounded-full bg-red-700 text-white text-s font-semibold mt-3 hover:bg-red-800"
        >
          Add New Posts
        </a>
      </div>

        <!-- <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="Some Caption" />
          <input type="file" name="file" />
          <input type="submit" />
        </form> -->
      </div>
      <!-- </div> -->
      <div class="container">
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
          <div class="card">
            <div  class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
              <img
                class="w-full h-full object-cover"
                src="/images/uploads/<%= user?.posts[0]?.image %>"
                alt=""
              />
            </div>
            <a href="/show/posts"  class="inline-block text-xl font-semibold mt-4 text-white">Your Uploaded Pins</a>
            <h5 class="text-sm font-medium text-zinc-200 opacity-60">
              <%= user.posts.length%> Pins
            </h5>
          </div>
        </div>
      </div>
      <!-- <% user.posts.forEach(function (post) { %>
        <div class="card" style="width: 18rem;">
          <img src="/images/uploads/<%= post.image%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=post.imageText %></h5>
            
          </div>
        </div>
        <% }) %> -->
    </div>

    <script>
      document
        .querySelector("#uploadicon")
        .addEventListener("click", function () {
          document.querySelector("#uploadform input").click();
        });
      document
        .querySelector("#uploadform input")
        .addEventListener("change", function () {
          document.querySelector("#uploadform").submit();
        });
    </script>



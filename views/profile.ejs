<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-zinc-800 flex">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      <input type="file" name="image" />
    </form>

    <!-- <div class="containerpers bg-zinc-800"> -->
    <div class="flex">
      <a href="/logout" class="button m-3">Logout</a>
    </div>
    <div
      class="profile - w-full min-h-screen flex item-center justify-center bg-zinc-800 text-white pt-1"
    >
      <div class="profdetc flex flex-col mt-10 bg-zinc-800 item-center">
        <div class="relative">
          <span
            id="uploadicon"
            class="w-8 h-8 absolute bottom-0 right-0 rounded-full item-center justify-center bg-zinc-200"
          >
            <i class="text-zinc-800 ri-pencil-fill"></i>
          </span>
          <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
            <img
              src="/images/uploads/<%= user.profileImage %>"
              alt="Profile Picture"
            />
          </div>
        </div>

        <h2 class="name text-white"><%= user.fullname %></h2>
        <h3 class="username text-white">@<%= user.username %></h3>
        <p class="tagline"></p>
        <p class="description"></p>
        <a href="/edit" class="button">edit</a>
        <button
          class="px-10 py-2 rounded-lg bg-red-700 text-white text-xs font-semibold mt-10"
        >
          Add New Posts
        </button>

        <!-- <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="Some Caption" />
          <input type="file" name="file" />
          <input type="submit" />
        </form> -->
      </div>
      <!-- </div> -->
      <div class="container">
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
          <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
              <img
                class="w-full h-full object-cover"
                src="https://i.pinimg.com/736x/8a/23/10/8a23103e33596f488635f394c936b270.jpg"
                alt=""
              />
            </div>
            <h3 class="text-xl font-semibold mt-4 text-white">All Pins</h3>
            <h5 class="text-sm font-medium text-zinc-200 opacity-60">
              28 Pins
            </h5>
          </div>
        </div>
      </div>
      <!-- <% user.posts.forEach(function (post) { %>
        <div class="card" style="width: 18rem;">
          <img src="/images/uploads/<%= post.image%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=post.imageText %></h5>
            
          </div>
        </div>
        <% }) %> -->
    </div>

    <script>
      document
        .querySelector("#uploadicon")
        .addEventListener("click", function () {
          document.querySelector("#uploadform input").click();
        });
      document
        .querySelector("#uploadform input")
        .addEventListener("change", function () {
          document.querySelector("#uploadform").submit();
        });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
